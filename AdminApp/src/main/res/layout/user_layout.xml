<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/user"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="11dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/p1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/perry_three"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/p1"
            android:text="Pery User"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/user_mobile"
            android:layout_below="@id/user_name"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/p1"
            android:text="Model"
            android:textSize="10sp"
            android:textColor="#FF5722" />
        <TextView
            android:id="@+id/user_deviceId"
            android:layout_below="@id/user_mobile"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/p1"
            android:text="device Id"
            android:textSize="10sp"
            android:textColor="#3F51B5" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:id="@+id/userTotalMsg"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_toStartOf="@id/userTotalMsg"
                    android:src="@drawable/baseline_message_24" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:id="@+id/userTotalCall"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_toStartOf="@id/userTotalCall"
                    android:src="@drawable/baseline_local_phone_24" />

            </RelativeLayout>




        </LinearLayout>



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>